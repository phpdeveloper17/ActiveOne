<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.title" remove="true"/>
        <referenceContainer name="sales.order.print" remove="true"/>

        <referenceBlock name="sales.order.print.info">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Sales::order/PrintShipment.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
