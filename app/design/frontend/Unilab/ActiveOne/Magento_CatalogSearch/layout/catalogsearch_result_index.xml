<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-products"/>
        <referenceBlock name="catalogsearch.product.addto" remove="true"/>
        <referenceBlock name="catalogsearch.leftnav" remove="true"/>
        <referenceBlock name="page.main.title">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_CatalogSearch::title.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Framework\View\Element\Template" name="catalog.leftnav.freshipping" before="-" template="Magento_Catalog::catalog/freeshipping.phtml"/>
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Framework\View\Element\Template" name="catalog.leftnav.menu" after="catalog.leftnav.freshipping" template="Magento_Catalog::catalog/navigation/left_menu.phtml"/>
        </referenceContainer>
        <referenceBlock name="catalog.leftnav" remove="true"/>
        <referenceBlock name="search_result_list">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Unilab_Prescription::product/list.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
