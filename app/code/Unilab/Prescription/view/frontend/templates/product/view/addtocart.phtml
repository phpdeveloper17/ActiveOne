        $prescriptionHelper = $this->helper('Unilab\Prescription\Helper\Data');
        $xQty = $_product->getData('unilab_moq') * 1; 
        $unilabdc   = $_product->getData('unilab_dc');
        $dc_enabled = $prescriptionHelper->getConfig('digitalcouponing/dcmaintenance/enabled');

        ?>

