<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.promo.catalog.grid.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="promo.catalog.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">promo_catalog_grid</argument>
                    <argument name="dataSource" xsi:type="object">Magento\CatalogRule\Model\ResourceModel\Grid\Collection</argument>
                    <argument name="default_sort" xsi:type="string">rule_id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="promo.catalog.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">pricelist/*/edit</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="id" xsi:type="string">getRuleId</item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="rule_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Price ID</argument>
                            <argument name="index" xsi:type="string">rule_id</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-id</argument>
                            <argument name="header_css_class" xsi:type="string">col-id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Price List</argument>
                            <argument name="index" xsi:type="string">name</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="customer_group_code">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Customer Group</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">customer_group_code</argument>
                            <!-- <argument name="renderer" xsi:type="string">Unilab\Pricelist\Block\Adminhtml\Promo\Widget\Grid\Column\CustomerGroup</argument> -->
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="price_level">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Price Level</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">price_level</argument>
                            <!-- <argument name="renderer" xsi:type="string">Unilab\Pricelist\Block\Adminhtml\Promo\Widget\Grid\Column\Pricelevel</argument> -->
                        </arguments>
                    </block>
                    
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="from_date">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">From Date</argument>
                            <argument name="type" xsi:type="string">date</argument>
                            <argument name="timezone" xsi:type="boolean">false</argument>
                            <argument name="index" xsi:type="string">from_date</argument>
                            <argument name="column_css_class" xsi:type="string">col-date</argument>
                            <argument name="header_css_class" xsi:type="string">col-date</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="to_date">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">To Date</argument>
                            <argument name="type" xsi:type="string">date</argument>
                            <argument name="timezone" xsi:type="boolean">false</argument>
                            <argument name="default" xsi:type="string">--</argument>
                            <argument name="index" xsi:type="string">to_date</argument>
                            <argument name="column_css_class" xsi:type="string">col-date</argument>
                            <argument name="header_css_class" xsi:type="string">col-date</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="limit_days">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Limited Days</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">limit_days</argument>
                        </arguments>
                    </block>
                    <!-- <block class="Magento\Backend\Block\Widget\Grid\Column" as="limit_time_from">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Limited Time From</argument>
                            <argument name="index" xsi:type="string">limit_time_from</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="renderer" xsi:type="string">Unilab\Pricelist\Block\Adminhtml\Promo\Widget\Grid\Column\FromTimeFormat</argument>
                        </arguments>
                    </block>
                    
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="limit_time_to">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Limited Time To</argument>
                            <argument name="type" xsi:type="string">time</argument>
                            <argument name="index" xsi:type="string">limit_time_to</argument>
                            <argument name="renderer" xsi:type="string">Unilab\Pricelist\Block\Adminhtml\Promo\Widget\Grid\Column\ToTimeFormat</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="from_qty">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Limited Quantity From</argument>
                            <argument name="index" xsi:type="string">from_qty</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="to_qty">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Limited Quantity To</argument>
                            <argument name="index" xsi:type="string">to_qty</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block> -->
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="is_active">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Status</argument>
                            <argument name="index" xsi:type="string">is_active</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="array">
                                <item name="active" xsi:type="array">
                                    <item name="value" xsi:type="string">1</item>
                                    <item name="label" xsi:type="string" translate="true">Active</item>
                                </item>
                                <item name="inactive" xsi:type="array">
                                    <item name="value" xsi:type="string">0</item>
                                    <item name="label" xsi:type="string" translate="true">Inactive</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column\Multistore" as="rule_website">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Web Site</argument>
                            <argument name="index" xsi:type="string">website_ids</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="options" model="Magento\Config\Model\Config\Source\Website\OptionHash"/>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="created_date">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Created Date</argument>
                            <argument name="type" xsi:type="string">datetime</argument>
                            <argument name="timezone" xsi:type="boolean">false</argument>
                            <argument name="default" xsi:type="string">--</argument>
                            <argument name="index" xsi:type="string">created_date</argument>
                            <argument name="column_css_class" xsi:type="string">col-date</argument>
                            <argument name="header_css_class" xsi:type="string">col-date</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="updated_date">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Modified Date</argument>
                            <argument name="type" xsi:type="string">datetime</argument>
                            <argument name="timezone" xsi:type="boolean">false</argument>
                            <argument name="default" xsi:type="string">--</argument>
                            <argument name="index" xsi:type="string">updated_date</argument>
                            <argument name="column_css_class" xsi:type="string">col-date</argument>
                            <argument name="header_css_class" xsi:type="string">col-date</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
